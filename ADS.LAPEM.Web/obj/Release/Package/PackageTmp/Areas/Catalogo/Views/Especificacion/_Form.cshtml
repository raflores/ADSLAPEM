@model ADS.LAPEM.Web.Areas.Catalogo.Models.EspecificacionViewModel
@using ADS.LAPEM.Services.Common;

@{
    ViewBag.Title = "_Form";
}

@using (Html.BeginForm("Create", "Especificacion", FormMethod.Post, new { id = "frmEspecificacion" }))
{
    <p>@Html.ValidationSummary()</p>
    <div>
        <ul>
            @foreach (string mensaje in Model.Mensajes)
            { 
                <li style="color: red">@mensaje</li>
            }
        </ul>
    </div>
    
    if (Model.Especificacion.Id > 0)
    { 
        <p>@Html.HiddenFor(x => x.Especificacion.Id)</p>
    }
    
    <div>
        <fieldset>
            <legend>ABC ESPECIFICACIÓN</legend>

            <div class="editor-label">
                 @Html.Label("*Producto: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.ProductoId, "*")
                @Html.DropDownListFor(x => x.Especificacion.ProductoId, Model.Productos, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>

            <div class="editor-label">
                 @Html.Label("*Norma: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.NormaId, "*")
                @Html.DropDownListFor(x => x.Especificacion.NormaId, Model.Normas, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>

            <div class="editor-label">
                 @Html.Label("*Norma  Ensayo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.NormaEnsayoId, "*")
                @Html.DropDownListFor(x => x.Especificacion.NormaEnsayoId, Model.NormasEnsayo, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div> 

            <div class="editor-label">
                 @Html.Label("*Ensayo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.EnsayoId, "*")
                @Html.DropDownListFor(x => x.Especificacion.EnsayoId, Model.Ensayos, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div> 

            <div class="editor-label">
                 @Html.Label("*Tipo Ensayo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.TipoEnsayoId, "*")
                @Html.DropDownListFor(x => x.Especificacion.TipoEnsayoId, Model.TiposEnsayo, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>

            <div class="editor-label">
                 @Html.Label("*Unidad Medida: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.UnidadMedidaId, "*")
                @Html.DropDownListFor(x => x.Especificacion.UnidadMedidaId, Model.Unidades, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>

            <div class="editor-label">
                 @Html.Label("Minimo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.Minimo, "*")
                @Html.TextBoxFor(x => x.Especificacion.Minimo, new { @class = "input100" })
            </div>

            <div class="editor-label">
                 @Html.Label("Maximo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.Maximo, "*")
                @Html.TextBoxFor(x => x.Especificacion.Maximo, new { @class = "input100" })
            </div>

            <div class="editor-label">
                 @Html.Label("Objetivo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.Objetivo, "*")
                @Html.TextBoxFor(x => x.Especificacion.Objetivo, new { @class = "input100" })
            </div>

            <div class="editor-label">
                 @Html.Label("Muestras: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Especificacion.Muestra, "*")
                @Html.TextBoxFor(x => x.Especificacion.Muestra, new { @class = "input100" })
            </div>

        </fieldset>


    </div>
}