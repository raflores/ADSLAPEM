@model ADS.LAPEM.Web.Areas.Catalogo.Models.SiloViewModel
@using ADS.LAPEM.Services.Common;

@{
    ViewBag.Title = "_Form";
}

@using (Html.BeginForm("Create", "Silo", FormMethod.Post, new { id = "frmSilo" }))
{ 
    <p>@Html.ValidationSummary()</p>
    <div>
        <ul>
            @foreach (string mensaje in Model.Mensajes)
            { 
                <li style="color: red">@mensaje</li>
            }
        </ul>
    </div>
    
    if (Model.Silo.Id > 0)
    { 
        <p>@Html.HiddenFor(x => x.Silo.Id)</p>
    }
    
    <div>

        <fieldset>
            <legend>ABC SILO</legend>

            <div class="editor-label">
                 @Html.Label("*Planta: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Silo.PlantaId, "*")
                @Html.DropDownListFor(x => x.Silo.PlantaId, Model.Plantas, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>
            <div class="editor-label">
                 @Html.Label("*Número Silo: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Silo.NumSilo, "*")
                @Html.TextBoxFor(x => x.Silo.NumSilo, new { @class = "input150" })
            </div>
            <div class="editor-label">
                 @Html.Label("Descripción: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Silo.Descripcion, "*")
                @Html.TextAreaFor(x => x.Silo.Descripcion, new { @class = "inputTextArea" })
            </div>            
        </fieldset> 

    </div>
    
    

}