@model ADS.LAPEM.Web.Areas.Catalogo.Models.EquipoViewModel


@using (Html.BeginForm("Delete", "Equipo", FormMethod.Post, new { id = "frmEquipo" }))
{
    <p>
        Se eliminará el equipo "@Model.Equipo.Serie  @Model.Equipo.Marca" del Sistema.
        ¿Desea continuar?
    </p>
    <div class="editor-label">
                 @Html.Label("Razón por la cúal se elimina: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Equipo.RazonBorrado, "*")
                @Html.TextBoxFor(x => x.Equipo.RazonBorrado)
            </div>
    <p>@Html.HiddenFor(x => x.Equipo.Id)</p>
}
