@model ADS.LAPEM.Web.Areas.Reporte.Models.RpteDimensionalViewModel
@using ADS.LAPEM.Services.Common;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/ads/reporte")

@using (Html.BeginForm("Reporte", "RpteDimensional", FormMethod.Post, new { id = "FrmRpteDimensional" }))
{
    <div>
        <fieldset>
            <legend>REPORTE DIMENSIONAL</legend>
            <div class="editor-label">
                 @Html.Label("Lote: ")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(x => x.Resultado.Lote.Identificador, new { @class = "input150" })
            </div>

            <div class="editor-label">
                 @Html.Label("Producto: ")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(x => x.Resultado.ProductoId, Model.Productos, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>

            <div class="editor-label">
                 @Html.Label("Fecha: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Resultado.FechaPrueba, "*")
                @Html.TextBoxFor(x => x.Resultado.FechaPrueba, new { @class = "datepicker" })
                @Html.HiddenFor(x => x.Resultado.ProductoId)
            </div>
        </fieldset>
    </div>
    
    <div>
@*   <p><input type="button" id="btnNewAjax" value="Nuevo Ajax" /></p>*@
        <p><input type="button" id="btnNew" value="Generar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" /></p>
    </div>
}


<script type="text/javascript">
    $(document).ready(function () {
        ADS.Reporte.Init();
        ADS.Reporte.Dimensional.Init();
    });
</script>