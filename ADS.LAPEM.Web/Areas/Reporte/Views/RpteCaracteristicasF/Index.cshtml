@model ADS.LAPEM.Web.Areas.Reporte.Models.RpteCaracteristicasFViewModel
@using ADS.LAPEM.Services.Common;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@Scripts.Render("~/bundles/ads/reporte")

@using (Html.BeginForm("Reporte", "RpteCaracteristicasF", FormMethod.Post, new { id = "FrmRpteCaracteristicasF" }))
{
    <br />
    <table border="1">
        <tr>
            <td>
                Filtro Búsqueda:
            </td>
        </tr>
        <tr>
            <td>
                <table id="busqueda">
                    <tr>
                        <td>                    
                            @Html.Label("Lote: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Lote.Identificador, new { data_rules_field = "Identificador", data_rules_op = "cn", data_search = true, @class = "input100" })
                        </td>
                    </tr>  
                    <tr>
                        <td>                    
                            @Html.Label("Producto: ")
                        </td>
                        <td>
                            @Html.DropDownListFor(x => x.Lote.ProductoId, Model.Productos, "Seleccione...", new { data_rules_field = "ProductoId", data_rules_op = "eq", data_search = true, @class = "input150" })
                        </td>
                    </tr>                  
                    <tr>
                        <td>                    
                            @Html.Label("Fecha: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Lote.FechaProduccion, new { @class = "datepicker", data_rules_field = "FechaProduccion", data_rules_op = "eq", data_search = true })
                        </td>
                    </tr>    
                    <tr>
                        <td colspan="2">&nbsp;</td>        
                    </tr>  
                    <tr>
                        <td colspan="2">                               
                            <input type="button" id="btnConsulta" value="Consultar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />                           
                        </td>
                    </tr>
                  </table>
            </td>
        </tr>
    </table>
    
    
    <div style="width:1024px; padding-left:initial; margin-top:10px">
        <table id="grid"></table>
        <div id="pager"></div>
    </div>    
}

<script type="text/javascript">
    $(document).ready(function () {
        ADS.Reporte.Init();
        ADS.Reporte.CaracteristicasF.Init();
    });
</script>