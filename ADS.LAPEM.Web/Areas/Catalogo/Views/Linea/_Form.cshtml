@model ADS.LAPEM.Web.Areas.Catalogo.Models.LineaViewModel
@using ADS.LAPEM.Services.Common;

@{
    ViewBag.Title = "_Form";
}

@using (Html.BeginForm("Create", "Linea", FormMethod.Post, new { id = "frmLinea" }))
{ 
    <p>@Html.ValidationSummary()</p>
    <div>
        <ul>
            @foreach (string mensaje in Model.Mensajes)
            { 
                <li style="color: red">@mensaje</li>
            }
        </ul>
    </div>
    
    if (Model.Linea.Id > 0)
    { 
        <p>@Html.HiddenFor(x => x.Linea.Id)</p>
    }
    
    
    <div>
        <fieldset>
            <legend>ABC Línea</legend>

            <div class="editor-label">
                @Html.Label("*Planta: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Linea.PlantaId, "*")
                @Html.DropDownListFor(x => x.Linea.PlantaId, Model.Plantas, IncidentManagerConstants.TextoDefaultCombo, new { @class = "inputCombo" })
            </div>
            <div class="editor-label">
                @Html.Label("*Nombre: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Linea.Nombre, "*")
                @Html.TextBoxFor(x => x.Linea.Nombre, new { @class = "input150" })
            </div>

            <div class="editor-label">
                @Html.Label("Descripción: ")
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(x => x.Linea.Descripcion, "*")
                @Html.TextAreaFor(x => x.Linea.Descripcion, new { @class = "inputTextArea" })
            </div>
            
        </fieldset>

    </div>
    
}