@model ADS.LAPEM.Web.Areas.Catalogo.Models.ProveedorViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/ads/catalogo")

<div class="wrapper">
		<div class="tituloSeccion">
			ABC Proveedores
		</div>
		<div class="lineaVerde">
		</div>
		
</div>	

<br />

<table border="1">
        <tr>
            <td>
                Filtro Búsqueda:
            </td>
        </tr>
        <tr>
            <td>
                <table id="busqueda">
                    <tr>
                        <td>                    
                            @Html.Label("Nombre de Proveedor: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Proveedor.Nombre, new { data_rules_field = "Nombre", data_rules_op = "cn", data_search = true, @class = "input100" })
                        </td>
                    </tr>                   
                    <tr>
                        <td>                    
                            @Html.Label("RFC del Proveedor: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Proveedor.RFC, new { data_rules_field = "RFC", data_rules_op = "cn", data_search = true, @class = "input100" })
                        </td>
                    </tr>      
                    <tr>
                        <td colspan="2">&nbsp;</td>        
                    </tr>  
                    <tr>
                        <td>                               
                            <input type="button" id="btnConsulta" value="Consultar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />                           
                        </td>
                        <td>
                            <input type="button" id="btnNew" value="Nuevo" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
                        </td>
                    </tr>
                  </table>
            </td>
        </tr>
    </table>

<div style="width:1024px; padding-left:initial; margin-top:10px">
    <table id="grid"></table>
    <div id="pager"></div>
</div>

<div id="dlg" title="Proveedor"></div>


<script type="text/javascript">
    $(document).ready(function () {
        ADS.Catalogo.Init();
        ADS.Catalogo.Proveedor.Init();
    });
</script>