@model ADS.LAPEM.Web.Areas.Catalogo.Models.CalibracionViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/ads/catalogo")


<div class="wrapper">
		<div class="tituloSeccion">
			ABC Calibraciones
		</div>
		<div class="lineaVerde">
		</div>
		
</div>	
<br />

<table border="1">
        <tr>
            <td>
                Filtro Búsqueda:
            </td>
        </tr>
        <tr>
            <td>
                <table id="busqueda">
                    <tr>
                        <td>                    
                            @Html.Label("No. Informe: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Calibracion.NoInformeCalib, new { data_rules_field = "NoInformeCalib", data_rules_op = "eq", data_search = true, @class = "input100" })
                        </td>
                    </tr>
                    <tr>
                        <td>                    
                            @Html.Label("Fecha: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Calibracion.FechaCalibracion, new { @class = "datepicker", data_rules_field = "FechaCalibracion", data_rules_op = "eq", data_search = true  })
                        </td>
                    </tr>                          
                    <tr>
                        <td colspan="2">&nbsp;</td>        
                    </tr>  
                    <tr>
                        <td>                               
                            <input type="button" id="btnConsulta" value="Consultar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />                           
                        </td>
                        <td>
                            <input type="button" id="btnNew" value="Nuevo" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
                        </td>
                    </tr>
                  </table>
            </td>
        </tr>
    </table>


<div style="width:500px; padding-left:300px">
    <table id="grid"></table>
    <div id="pager"></div>
</div>

<div id="dlg" title="Calibracion"></div>


<script type="text/javascript">
    $(document).ready(function () {
        ADS.Catalogo.Init();
        ADS.Catalogo.Calibracion.Init();
    });
</script>