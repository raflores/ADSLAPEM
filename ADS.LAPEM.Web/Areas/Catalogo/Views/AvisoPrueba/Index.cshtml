@model ADS.LAPEM.Web.Areas.Catalogo.Models.AvisoPruebaViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/ads/catalogo")

<div class="wrapper">
		<div class="tituloSeccion">
			Avisos de Pruebas
		</div>
		<div class="lineaVerde">
		</div>
		
</div>	

<br />



@using (Html.BeginForm("EnviarAviso", "AvisoPrueba", FormMethod.Post, new { id = "FrmAvisoPrueba" }))
{
    <div id="avResultado"></div>
    <div style="width:500px; padding-left:300px">
        <table id="grid"></table>
        <div id="pager"></div>
    </div>        
    <div>
       <p><input type="button" id="btnNew" value="Enviar Aviso" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" /></p>
    </div>

    <div id="dlg" title="Detalle del Lote">
        <table id="gridDetalle"></table>
    </div>
}







<script type="text/javascript">
    $(document).ready(function () {
        ADS.Catalogo.Init();
        ADS.Catalogo.AvisoPrueba.Init();
    });
</script>
